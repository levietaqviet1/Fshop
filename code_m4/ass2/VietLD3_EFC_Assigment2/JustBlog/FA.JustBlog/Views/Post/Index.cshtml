@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["TitleHeader"] = "Posts";
    ViewData["TitleHeaderBody"] = "All Posts !";
}

@using FA.JustBlog.ViewModel.ViewModel
@model IList<PostViewModel>

<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            @foreach (PostViewModel item in Model)
            {
                <!-- Post preview-->
                <div class="post-preview">
                    <a href="/post/Details?urlSlug=@item.UrlSlug">
                        <h2 class="post-title">@item.Title</h2> 
                    </a>
                    <p class="post-meta">
                        Posted by  @item.UsingIdentityUser.LastName @item.UsingIdentityUser.Firstname
                        <a href="#!"></a>
                        @item.PostedOn  
                    </p>
                    <h3 class="post-subtitle">@item.ShortDescription</h3>
                </div>
                <!-- Divider-->
                <hr class="my-4" /> 
            }

            <!-- Pager-->
            <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older Posts →</a></div>
        </div>
    </div>
</div>