@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@using FA.JustBlog.Core.Models
@inject SignInManager<UsingIdentityUser> SignInManager

<!DOCTYPE html>
<html dir="ltr" lang="en">

<head>
     <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="keywords"
        content="leave management, .net 6, .net core, complete asp.net and entity framework development">
    <meta name="description"
        content="Educational Project for .NET 6 Development">
    <meta name="robots" content="noindex,nofollow">
    <title>@ViewData["Title"] - Just Blog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css" asp-append-version="true" />
    <link rel="stylesheet" href="https//code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <link rel="canonical" href="https://www.wrappixel.com/templates/xtreme-admin-lite/" />
    <!-- Custom CSS -->
    <link href="~/css/style.min.css" rel="stylesheet">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
<![endif]-->
</head>

<body>
    <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
     
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
        data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">
        <!-- ============================================================== -->
        <!-- Topbar header - style you can find in pages.scss -->
        <!-- ============================================================== -->
        <header class="topbar" data-navbarbg="skin5">
            <nav class="navbar top-navbar navbar-expand-md navbar-dark">
                <div class="navbar-header" data-logobg="skin5">
                    <!-- ============================================================== -->
                    <!-- Logo -->
                    <!-- ============================================================== -->
                    <a class="navbar-brand" href="/Home"> 
                        <span class="logo-text">
                            Just Blog
                        </span>
                    </a> 
                    <a class="nav-toggler waves-effect waves-light d-block d-md-none" href="javascript:void(0)"><i
                            class="ti-menu ti-close"></i></a>
                </div> 
                <div class="navbar-collapse collapse" id="navbarSupportedContent" data-navbarbg="skin5">   
                </div>
            </nav>
        </header> 
        <aside class="left-sidebar" data-sidebarbg="skin6">
            <!-- Sidebar scroll-->
            <div class="scroll-sidebar">
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav">
                    <ul id="sidebarnav">
                        <!-- User Profile-->
                         
                            <!-- User Profile-->
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <div class="user-profile d-flex no-block dropdown m-t-20">
                                    <div class="user-content hide-menu m-l-10">
                                        <a href="#" class="" id="Userdd" role="button"
                                            data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <h5 class="m-b-0 user-name font-medium">@User.Identity?.Name <i
                                                    class="fa fa-angle-down"></i></h5>
                                            <span class="op-5 user-email">@User.FindFirstValue(ClaimTypes.Role)</span>
                                        </a>
                                    </div>
                                </div> 
                            } 
                            <!-- End User Profile-->

                        <!-- User Profile-->
                        <div class="btn-group dropend">
                        
                            <li class="sidebar-item"  data-bs-toggle="dropdown" aria-expanded="false">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link" href="#">
                                <span><i class="fa-solid fa-list"></i> Manage Posts</span>
                            </a> 
                        </li> 
                            <ul class="dropdown-menu">
                            <li class="p-15 m-t-10">
                                <a href="/Admin/Post/Create" class="btn btn-block create-btn text-white no-block d-flex align-items-center">
                                <i class="fa fa-plus-square"></i> <span class="hide-menu m-l-5">Create New Posts</span>
                                </a>
                                </li> 
                            <li class="sidebar-item">
                                    <a class="sidebar-link waves-effect waves-dark sidebar-link" asp-area="Admin" asp-controller="Posts" asp-action="Index">
                                        <span><i class="fa-solid fa-list"></i> All Posts</span>
                                    </a>
                                </li>
                                <li class="sidebar-item">
                                    <a class="sidebar-link waves-effect waves-dark sidebar-link" asp-area="Admin" asp-controller="Posts" asp-action="Latest">
                                        <span><i class="fa-solid fa-file-circle-plus"></i> Latest Posts</span>
                                    </a>
                                </li>
                                <li class="sidebar-item">
                                <a class="sidebar-link waves-effect waves-dark sidebar-link" asp-area="Admin" asp-controller="Posts" asp-action="MostViewed">
                                    <span><i class="fa-solid fa-eye"></i> Most Viewed Posts</span>
                                </a>
                                </li>
                                <li class="sidebar-item">
                                <a class="sidebar-link waves-effect waves-dark sidebar-link" asp-area="Admin" asp-controller="Posts" asp-action="Interesting">
                                    <span><i class="fa-solid fa-fire"></i> Most Interesting Posts</span>
                                </a>
                                </li>
                                <li class="sidebar-item">
                                <a class="sidebar-link waves-effect waves-dark sidebar-link" asp-area="Admin" asp-controller="Posts" asp-action="Published">
                                    <span><i class="fa-solid fa-square-check"></i> Published Posts</span>
                                </a>
                                </li>
                                <li class="sidebar-item">
                                <a class="sidebar-link waves-effect waves-dark sidebar-link" asp-area="Admin" asp-controller="Posts" asp-action="Unpublished">
                                    <span><i class="fa-solid fa-square-minus"></i> Unpublished Posts</span>
                                </a>
                                </li>
                            </ul>
                        </div>

                        <li class="sidebar-item"> 
                            <a class="sidebar-link waves-effect waves-dark sidebar-link" asp-area="Admin" asp-controller="Tags" asp-action="Index">
                                <span><i class="fa-solid fa-tag"></i> Manage Tags</span>
                            </a>
                        </li>
                        <li class="sidebar-item"> 
                            <a class="sidebar-link waves-effect waves-dark sidebar-link" asp-area="Admin" asp-controller="Categories" asp-action="Index">
                                <span><i class="fa-sharp fa-solid fa-bookmark"></i> Manage Categories</span>
                            </a>
                        </li>
                        <li class="sidebar-item"> 
                            <a class="sidebar-link waves-effect waves-dark sidebar-link" asp-area="Admin" asp-controller="Comments" asp-action="Index">
                                <span><i class="fa-solid fa-comments"></i> All Comments</span>
                            </a>
                        </li>
                            @if (SignInManager.IsSignedIn(User))
                            {
                <li class="p-15 m-t-10">
                    <form class="form-inline" action="/Identity/Account/Logout" method="get">
                        <button type="submit" class="btn d-block w-100 create-btn text-white no-block d-flex align-items-center">
                            <span><i class="fa fa-power-off m-r-5 m-l-5"></i> Sign-out</span>
                        </button>
                    </form>
                </li>
                            }
                    </ul>

                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <div class="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    @RenderBody()
                </div>
            </div> 
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/ckeditor5/ckeditor.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>

    
    <!--Wave Effects -->
    <script src="~/dist/js/waves.js"></script>
    <script src="~/js/waves.js"></script>
   @* <!--Menu sidebar -->
    <script src="~/js/sidebarmenu.js"></script>*@
    <!--Custom JavaScript -->
    <script src="~/js/custom.js"></script>
    <!--This page JavaScript -->
    <!--chartis chart-->
    @*<script src="~/js/pages/dashboards/dashboard1.js"></script>*@

    <script>
        $(function(){
            $('.table').DataTable();
            $(".datepicker").datepicker({
                dateFormat: "yy-mm-dd"
            });
        });
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>