@page
@model FA.JustBlog.Areas.Identity.Pages.Role.AddUserRole
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <p>Update for  <strong>@Model.Input.Name</strong></p>
        <form method="post">
            <partial name="_StatusMessage" model="@Model.StatusMessage" />
            <div class="form-group">
                <label asp-for="Input.User.UserName" class="control-label"></label>
                <input readonly asp-for="Input.User.UserName" class="form-control" />
                <span asp-validation-for="Input.User.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.User.Firstname" class="control-label"></label>
                <input asp-for="Input.User.Firstname" class="form-control" />
                <span asp-validation-for="Input.User.Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.User.LastName" class="control-label"></label>
                <input asp-for="Input.User.LastName" class="form-control" />
                <span asp-validation-for="Input.User.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.User.PhoneNumber" class="control-label"></label>
                <input asp-for="Input.User.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.User.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.User.TwoFactorEnabled" class="control-label"></label>
                <input asp-for="Input.User.TwoFactorEnabled"/>
                <span asp-validation-for="Input.User.TwoFactorEnabled" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.User.LockoutEnabled" class="control-label"></label>
                <input asp-for="Input.User.LockoutEnabled" />
                <span asp-validation-for="Input.User.LockoutEnabled" class="text-danger"></span>
            </div> 
            <div class="form-group">
                @Html.LabelFor(x => x.Input.RoleNames)
                @Html.ListBoxFor(x => x.Input.RoleNames,
                new SelectList( Model.AllRoles ),
                new {@class="w-100", id = "selectrole"})
            </div>
           

            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Input.ID">
            <input type="hidden" asp-for="isConfirmed">
            <a class="btn btn-primary" asp-page="./User">Danh sách</a>
            <button type="submit" class="btn btn-danger">Cập nhật</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css" />
    <script>
        $('#selectrole').multipleSelect({
              selectAll: false,
              keepOpen: false,
              isOpen: false
          });
    </script>


    <partial name="_ValidationScriptsPartial" />
}