@model IEnumerable<FA.JustBlog.ViewModel.ViewModel.TagViewModel>
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Security.Claims
@using FA.JustBlog.Core.Utill
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>All Tags</h1>
 
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
             @if (User.Claims.Any(c => c.Type == ClaimTypes.Role && (c.Value == $"{RoleUnit.Role_BlogOwner}")))
            {
                <th>Function</th>
            } 
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <a href="/Admin/Tag/Details?id=@item.Id"> @Html.DisplayFor(modelItem => item.Name)</a>
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            @if (User.Claims.Any(c => c.Type == ClaimTypes.Role && (c.Value == $"{RoleUnit.Role_BlogOwner}")))
                {
                    <td>
                        <a href="/Admin/Tag/Edit?id=@item.Id">Edit</a>
                        <a href="/Admin/Tag/Delete?id=@item.Id">Delete</a>
                    </td>
                    }
           
        </tr>
}
    </tbody>
</table>
